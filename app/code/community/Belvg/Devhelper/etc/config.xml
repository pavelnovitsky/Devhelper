<config>
    <modules>
        <Belvg_Devhelper>
            <version>1.0.0</version>
        </Belvg_Devhelper>
    </modules>
    <admin>
        <routers>
            <devhelper>
                <use>admin</use>
                <args>
                    <module>Belvg_Devhelper</module>
                    <frontName>devhelper</frontName>
                </args>
            </devhelper>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Belvg_Devhelper>
                    <files>
                        <default>Belvg_Devhelper.csv</default>
                    </files>
                </Belvg_Devhelper>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <devhelper>
                <class>Belvg_Devhelper_Model</class>
                <resourceModel>devhelper_resource</resourceModel>
            </devhelper>
            <devhelper_resource>
                <class>Belvg_Devhelper_Model_Resource</class>
            </devhelper_resource>
        </models>
        <blocks>
            <devhelper>
                <class>Belvg_Devhelper_Block</class>
            </devhelper>
        </blocks>
        <helpers>
            <devhelper>
                <class>Belvg_Devhelper_Helper</class>
            </devhelper>
        </helpers>
    </global>
</config>